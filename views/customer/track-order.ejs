        <section id="track-order-section"> 
            <div class="cart-container">
                <h1>Your Table Orders (Table ID: <%= tableId %>)</h1>
                <table class="cart-table" id="customer-orders">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Time</th>
                            <th>Status</th>
                            <th>Items</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>        
        </section>

        <footer>
            <%- include('../partials/footer1.ejs') %>
        </footer>

        <script>
            function fetchCustomerOrders() {
                fetch('/api/customer/orders')
                    .then(res => res.json())
                    .then(data => {
                        const grouped = {};

                        data.forEach(item => {
                            if (!grouped[item.orderID]) {
                                grouped[item.orderID] = { ...item, items: [] };
                            }
                            grouped[item.orderID].items.push(`${item.foodName} Ã— ${item.quantity}`);
                        });

                        const tbody = document.querySelector('#customer-orders tbody');
                        tbody.innerHTML = '';

                        Object.values(grouped).forEach(order => {
                            const row = document.createElement('tr');
                            row.innerHTML = `
                                <td>${order.orderID}</td>
                                <td>${new Date(order.orderTime).toLocaleString()}</td>
                                <td>${order.status}</td>
                                <td>${order.items.join('<br>')}</td>
                            `;
                            tbody.appendChild(row);
                        });
                    });
            }

            setInterval(fetchCustomerOrders, 5000);
            document.addEventListener('DOMContentLoaded', fetchCustomerOrders);
        </script>

    </body>

