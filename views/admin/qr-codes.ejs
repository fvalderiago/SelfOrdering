<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header1.ejs') %>
  <title>Table QR Codes</title>
  <style>
    .qr-container { display: flex; flex-wrap: wrap; gap: 2rem; }
    .qr-item { text-align: center; }
    img { width: 150px; height: 150px; }
  </style>
</head>
<body>
  <h1>Table QR Codes</h1>
  <div class="qr-container">
    <% qrCodes.forEach(({ tableNum, qrCodeDataUrl, url }) => { %>
      <div class="qr-item">
        <h3>Table <%= tableNum %></h3>
        <img src="<%= qrCodeDataUrl %>" alt="QR code for Table <%= tableNum %>" />
        <p><small><a href="<%= url %>" target="_blank">Test Link</a></small></p>
      </div>
    <% }) %>
  </div>
</body>
</html>