<html>
    <head>
        <%- include('partials/header1.ejs') %>
    </head>
	<body>
        <!--navbar-->
        <%- include('partials/navbar-loggedout.ejs') %>

        <!--login section-->
        <section id="login" class="login-register">
            <div class="card register-card shadow">
                <h2 class="text-center mb-4">Login</h2>

                <form action="/auth" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="email">Email address</label>
                    <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    placeholder="you@example.com"
                    required
                    />
                </div>

                <div class="mb-4">
                    <label class="form-label" for="password">Password</label>
                    <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    placeholder="••••••••"
                    required
                    />
                </div>

                <div class="mb-3 text-end">
                    <a href="/forgot-password" class="small">Forgot Password?</a>
                </div>

                <div class="hero-action-btn-container">
                    <input type="submit" class="btn w-100" value="Submit">
                    <a href="/register">Register</a>
                </div> 
                </form>
            </div>
           
        </section>
        <footer>
            <%- include('partials/footer1.ejs') %>
        </footer>
	</body>
</html>